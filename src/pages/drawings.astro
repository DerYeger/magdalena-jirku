---
import Gallery from '@components/Gallery.vue'
import { useDrawingsGallery } from '@composables/gallery'
import MainLayout from '@layouts/MainLayout.astro'
import type { GalleryImage } from '@composables/types'

const images: GalleryImage[] = await useDrawingsGallery()
---

<MainLayout>
  <h1 class="sr-only">Drawings</h1>
  <div class="max-w-85rem mx-auto w-full">
    <Gallery images={images} client:load imageWidth={300} />
  </div>
</MainLayout>
