{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["playwright-report", "dist", "node_modules"],
  "vueCompilerOptions": {
    "strictCssModules": true,
    "strictTemplates": true
  }
}
